<MudText Align="Align.Center" Typo="Typo.h5" Class="pt-8 pb-2 skills" Color="Color.Inherit">
    Skills
</MudText>
<MudContainer Class="p-0">
    <MudGrid Justify="Justify.Center" Spacing="1">
        @foreach (var skill in Skills)
        {
            <MudItem>
                <MudChip T="string" Color="@(isDarkMode ? Color.Dark : Color.Primary)" Variant="Variant.Filled">
                    @skill
                </MudChip>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

@code {
    [Parameter] public List<string> Skills { get; set; } = new();
    [Parameter] public bool isDarkMode { get; set; }
}
