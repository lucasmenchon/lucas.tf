<SectionTitle Title="Skills" Class="pt-8 pb-2 skills" />

<MudContainer Class="p-0">
    <MudGrid Justify="Justify.Center" Spacing="1">
        @foreach (var skill in Skills)
        {
            <MudItem>
                <MudChip T="string" Color="Color.Primary" Variant="Variant.Filled">
                    @skill
                </MudChip>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

@code {
    [Parameter] public List<string> Skills { get; set; } = new();
}
