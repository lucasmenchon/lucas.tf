<SectionTitle Title="Experiências" Class="pt-8 pb-2" />

<MudTimeline TimelinePosition="TimelinePosition.Start" Class="pt-0 pb-0" Breakpoint="Breakpoint.Sm">
    @foreach (var experience in Experiences)
    {
        <MudTimelineItem Size="Size.Small" Color="@experience.Color" Elevation="4">
            <ItemContent>
                <MudCard Elevation="4" Class="pa-2">
                    <MudCardContent>
                        <MudText Typo="Typo.body1" Color="Color.Secondary">@experience.Company</MudText>
                        <MudText Typo="Typo.caption" Color="Color.Primary">@experience.Role • @experience.Period</MudText>
                        <MudSpacer />
                        @foreach (var detail in experience.Details)
                        {
                            <MudText Typo="Typo.caption" Color="Color.Tertiary">@detail</MudText>
                        }
                    </MudCardContent>
                </MudCard>
            </ItemContent>
        </MudTimelineItem>
    }
</MudTimeline>

@code {
    [Parameter] public List<Experience> Experiences { get; set; } = new();

    public class Experience
    {
        public string Company { get; set; } = string.Empty;
        public string Role { get; set; } = string.Empty;
        public string Period { get; set; } = string.Empty;
        public Color Color { get; set; } = MudBlazor.Color.Info;
        public List<string> Details { get; set; } = new();
    }
}
