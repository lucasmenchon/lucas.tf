<SectionTitle Title="Contato" Class="pt-8 pb-2 contact" />

<MudContainer Class="p-0 pb-2">
    <MudGrid Class="d-flex justify-center text-gray-200 pt-3 pb-3" Justify="Justify.Center">
        @foreach (var social in SocialLinks)
        {
            <MudItem>
                <MudIconButton Icon="@Utils.GetIcon(social.Icon)" Size="Size.Small" Href="@social.Link" Target="_blank" Color="Color.Primary" Variant="Variant.Filled" />
            </MudItem>
        }
    </MudGrid>
    <MudItem Class="d-flex justify-center">
        <MudText Typo="Typo.body2" Align="Align.Center" Class="col-10">
            @ContactText
        </MudText>
    </MudItem>
</MudContainer>

@code {
    [Parameter] public List<SocialLink> SocialLinks { get; set; } = new();
    [Parameter] public string ContactText { get; set; } = string.Empty;
}
