<SectionTitle Title="Educação" Class="pt-8 pb-2 education" />

<MudGrid Justify="Justify.Center" Spacing="2">
    @if (Educations != null && Educations.Any())
    {
        @foreach (var education in Educations)
        {
            <MudItem xs="12" sm="6">
                <MudPaper Elevation="4" Class="d-flex flex-column justify-center align-center p-4 mx-2">
                    <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Primary" Class="mb-2">
                        @education.Title
                    </MudText>
                    <MudDivider Class="mb-2" />
                    <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Secondary" Class="mb-1">
                        @education.Course
                    </MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Tertiary" Class="mb-1">
                        @education.Institution
                    </MudText>
                    <MudText Typo="Typo.caption" Align="Align.Center" Color="Color.Secondary">
                        @education.Duration
                    </MudText>
                </MudPaper>
            </MudItem>
        }
    }
    else
    {
        <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Secondary">
            Nenhuma educação encontrada.
        </MudText>
    }
</MudGrid>

@code {
    [Parameter] public List<Education> Educations { get; set; } = new();
}
