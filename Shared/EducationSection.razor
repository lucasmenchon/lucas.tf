<MudPaper Elevation="4" Class="d-flex flex-column justify-center align-center p-4 mx-2">
    <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Primary" Class="mb-2">
        @Title
    </MudText>
    <MudDivider Class="mb-2" />
    <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Secondary" Class="mb-1">
        @Course
    </MudText>
    <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Tertiary" Class="mb-1">
        @Institution
    </MudText>
    <MudText Typo="Typo.caption" Align="Align.Center" Color="Color.Secondary">
        @Duration
    </MudText>
</MudPaper>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Course { get; set; } = string.Empty;
    [Parameter] public string Institution { get; set; } = string.Empty;
    [Parameter] public string Duration { get; set; } = string.Empty;

    public class Education
    {
        public string Title { get; set; } = string.Empty;
        public string Course { get; set; } = string.Empty;
        public string Institution { get; set; } = string.Empty;
        public string Duration { get; set; } = string.Empty;
    }
}
